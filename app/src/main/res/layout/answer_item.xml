<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answerContainerLayout"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Cevap metni -->
    <TextView
        android:id="@+id/answerTextView"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/answerTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answered on: 2024-05-14 15:30"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp"/>

    <!-- Cevabı yazan kullanıcı -->
    <TextView
        android:id="@+id/answerUsernameTextView"
        android:text="By: username"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="#888888"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Oylama ve bildirim -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/upvoteButton"
            android:text="👍"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/voteCountTextView"
            android:text="0"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/downvoteButton"
            android:text="👎"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
